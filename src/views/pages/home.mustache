{{>partials/header}}



<form method="POST" action="/novousuario">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Nome</label>
      <input type="text" class="form-control" name="name" placeholder="Digite um nome">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Idade</label>
      <input type="text" class="form-control" name="age" placeholder="Digite uma idade" >
    </div>
    <input type="submit" class="btn btn-primary" value="Inserir Usuário">
</form>
<h2>Usuários do banco</h2>
<ul>
    {{#users}}
        <li>{{name}} - Idade: {{age}} - <a class="btn btn-primary mb-3" href="/usuario/{{id}}/excluir">Excluir</a></li>
    {{/users}}
</ul>

{{>partials/footer}}